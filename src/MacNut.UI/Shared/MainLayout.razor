@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <CascadingValue Value="this">
        <MudAppBar Elevation="1">
            <MudIconButton Icon="@Icons.Material.Filled.Menu"
                           Color="Color.Inherit" Edge="Edge.Start"
                           OnClick="@((e) => ToggleNavMenuOpen())" />

            <MudText Typo="Typo.h5" Class="ml-3">MacNut</MudText>
            <MudSpacer />
            <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
        </MudAppBar>

        <NavMenu />

        ﻿<MudMainContent>
            <div class="py-5 px-5">
                @Body
            </div>
        </MudMainContent>
    </CascadingValue>
</MudLayout>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    public bool IsNavMenuOpen = true;

    public void ToggleNavMenuOpen()
    {
        IsNavMenuOpen = !IsNavMenuOpen;
        StateHasChanged();
    }

}

 